<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rackathon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/o"
        android:label="Buk-A-Buk"
        android:roundIcon="@mipmap/o"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".wait" />
        <activity
            android:name=".Host"
            android:launchMode="singleTop"
            android:parentActivityName=".mainview"
            android:theme="@style/frew">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainview" />
        </activity>
        <activity
            android:name=".news"
            android:launchMode="singleTop"
            android:parentActivityName=".mainview"
            android:theme="@style/frew">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainview" />
        </activity>
        <activity
            android:name=".creditsbal"
            android:launchMode="singleTop"
            android:parentActivityName=".mainview"
            android:theme="@style/frew">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainview" />
        </activity>
        <activity
            android:name=".notifi"
            android:launchMode="singleTop"
            android:parentActivityName=".mainview"
            android:theme="@style/frew">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainview" />
        </activity>
        <activity
            android:name=".SearchableActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".mainview"
            android:theme="@style/frew">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".mainview" />
        </activity>
        <activity
            android:name=".postbook"
            android:launchMode="singleTop"
            android:parentActivityName=".mainview"
            android:theme="@style/frew">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainview" />
        </activity>
        <activity
            android:name=".chat"
            android:launchMode="singleTop"
            android:parentActivityName=".mainview"
            android:theme="@style/frew">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainview" />
        </activity>
        <activity
            android:name=".mainview"
            android:label="Buk-A-Buk"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Signup" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>