<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/bgg"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingBottom="60sp"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/offs"
            android:text="Available Credits:"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:paddingBottom="4sp"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/credits"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:paddingBottom="180sp"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/off"
            android:text="Short of credits?"
            android:gravity="center"
            android:layout_marginTop="10dp"

            android:textColor="#000"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3" >
            <ImageView
                android:id="@+id/login_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="twe"
                android:src="@drawable/tww" />
            <ImageView
                android:id="@+id/comapre_now_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="sha"
                android:src="@drawable/share" />
            <ImageView
                android:id="@+id/search_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="host"
                android:src="@drawable/ev" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3" >
            <TextView
                android:id="@+id/j"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tweet"
                android:textSize="12dp"
                android:paddingHorizontal="37dp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/f"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share"
                android:textSize="12dp"
                android:paddingHorizontal="41dp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/k"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Host"
                android:textSize="12dp"
                android:paddingHorizontal="43dp"
                android:textColor="#000"
                />
        </LinearLayout>











    </LinearLayout>
</RelativeLayout>